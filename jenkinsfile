pipeline {

	agent any

	stages { 

	    stage('build') {

	      steps {
	          echo 'building the application'
	      }
	    }

	    stage('test') {

	      steps{
	         echo 'testing the appliaction'
	      }
	    }

	    stage('deploy'){

	       steps{
	           echo 'deploying  the appliaction'
	       }
	    }

}
}
